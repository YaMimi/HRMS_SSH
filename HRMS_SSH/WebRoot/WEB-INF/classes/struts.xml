<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<!-- attendance包  2015-6-10 杨明杰、卢国燊-->
	<package name="attendance" extends="struts-default" namespace="/">
		<!-- 员工考勤查询 -->
		<action name="WorkerAttendanceSearch" class="AttendanceAction" method="workerAttendanceSearch">
			<result name="success" type="redirect">/attendanceCheck.jsp</result>
		</action>
		<!-- 员工按日期考勤查询 -->
		<action name="WorkerAttendanceSearchByDate" class="AttendanceAction" method="workerAttendanceSearchByDate">
			<result name="success" type="redirect">/attendanceCheck.jsp</result>
		</action>
		<!-- 员工请假申请 -->
		<action name="WorkerVacationApply" class="VacationAction" method="workerVacationApply">
			<result name="success" type="redirect">/attendanceVct.jsp</result>
		</action>
		<!-- 员工个人请假查询 -->
		<action name="WorkerVacationSearch" class="VacationAction" method="workerVacationSearch">
			<result name="success" type="redirect">/attendanceVct.jsp</result>
		</action>
		<!-- 请假审批查询 -->
		<action name="ApproveVacationSearch" class="VacationAction" method="approveVacationSearch">
			<result name="success" type="redirect">/attendanceVctCheck.jsp</result>
		</action>
		<!-- 请假审批 -->
		<action name="VacationApprove" class="VacationAction" method="vacationApprove">
			<result name="success" type="redirect">/attendanceVctCheck.jsp</result>
		</action>
		
		<!-- 请假待审批条目数 -->
		<action name="VacationNum" class="VacationAction" method="getVacationNum"></action>
		
		<!-- 签到系统 -->
		<action name="workerAttendanceInsert" class="AttendanceAction" method="workerAttendanceInsert">
			<result name="success" type="redirect">/attendanceSubmit.jsp</result>
			<result name="error" type="redirect">/attendanceSubmit.jsp</result>
		</action>
		<!-- 部门当日考勤查询 -->
		<action name="DepartmentAttendanceSearch" class="AttendanceAction" method="departmentAttendanceSearch">
			<result name="success" type="redirect">/attendanceDepartment.jsp</result>
		</action>
		<!-- 部门日期考勤查询 -->
		<action name="DateSearchDepartmentAttendance" class="AttendanceAction" method="dateSearchDepartmentAttendance">
			<result name="success" type="redirect">/attendanceDepartment.jsp</result>
		</action>
	</package>

	<!-- Login Package -->
	<package name="login" extends="struts-default" namespace="/">
		<!-- LoginAction -->
		<action name="Login" class="LoginAction" method="login">
			<result name="success" type="redirect">/index.jsp</result>
			<result name="error" type="redirect">/login.jsp</result>
			<result name="none" type="redirect">/login.jsp</result>
		</action>
		
		<!-- LogoutAction -->
		<action name="Logout" class="LoginAction" method="logout">
			<result name="success" type="redirect">/login.jsp</result>
		</action>
		
		<!-- LoginJumpingAction -->
		<action name="LoginJumping" class="LoginAction" method="loginJumping">
			<result name="login" type="redirect">/login.jsp</result>
		</action>
	</package>
	
	<!-- Message Package -->
	<package name="message" extends="struts-default" namespace="/">
		<!-- CheckMessageAction -->
		<action name="CheckMessage" class="MessageAction" method="checkMessage"></action>
		
		<!-- ShowMessageAction -->
		<action name="ShowMessage" class="MessageAction" method="showMessage">
			<result name="success" type="redirect">/message.jsp</result>
		</action>
		
		<!-- NewMessageAction -->
		<action name="NewMessage" class="MessageAction" method="newMessage">
			<result name="success" type="redirect">/message.jsp</result>
			<result name="error" type="redirect">/message.jsp</result>
			<result name="none" type="redirect">/login.jsp</result>
		</action>
	</package>
	
	<!-- Cultivation Package -->
	<package name="cultivation" extends="struts-default" namespace="/">
		<!-- ShowCultivationAction -->
		<action name="ShowCultivation" class="CultivationAction" method="showCultivation"></action>
		
		<!-- NewCultivationPersonAction -->
		<action name="NewCultivation" class="CultivationAction" method="newCultivation">
			<result name="success" type="redirect">/cultivation.jsp</result>
			<result name="error" type="redirect">/cultivation.jsp</result>
		</action>
		
	</package>
	
	<!-- CultivationPerson Package -->
	<package name="cultivationperson" extends="struts-default" namespace="/">
		<!-- DeleteCultivationPersonAction -->
		<action name="DeleteCultivationPerson" class="CultivationPersonAction" method="deleteCultivationPerson">
			<result name="success" type="redirect">/cultivationCheck.jsp</result>
		</action>
		
		<!-- NewCultivationPersonAction -->
		<action name="NewCultivationPerson" class="CultivationPersonAction" method="newCultivationPerson">
			<result name="success" type="redirect">/cultivationCheck.jsp</result>
		</action>
		
		<!-- RankCultivationPersonAction -->
		<action name="RankCultivationPerson" class="CultivationPersonAction" method="rankCultivationPerson">
			<result name="success" type="redirect">/cultivation.jsp</result>
		</action>

	</package>
	
	<!-- 杨铭    department包 -->
	<package name="department" extends="struts-default" namespace="/">
		
		<!-- 部门信息查询 -->
		<action name="DepartmentSearch" class="DepartmentAction" method="DepartmentSearch">
			<result name="success" type="redirect">/departmentCheck.jsp</result>
		</action>
		
		<!-- 添加部门时部门信息查询 -->
		<action name="allDepartmentSearch" class="DepartmentAction" method="allDepartmentSearch">
			<result name="success" type="redirect">/departmentAdd.jsp</result>
		</action>
		
		
		<!-- 部门信息查询(根据Oid查询) -->
		<action name="UpdateDepartmentImfo" class="DepartmentAction" method="UpdateDepartmentImfo">
			<result name="success" type="redirect">/departmentEdit.jsp</result>
		</action>
		
		<!-- 添加部门 2015-6-10 杨铭 -->
		<action name="DepartmentInsert" class="DepartmentAction" method="DepartmentInsert">
			<result name="success" type="redirect">/departmentCheck.jsp</result>
			<result name="input" type="redirect">/departmentAdd.jsp</result>
		</action>
		
		<!-- 修改部门 2015-6-10 杨铭 -->
		<action name="departmentUpdate" class="DepartmentAction" method="departmentUpdate">
			<result name="success" type="redirect">/departmentCheck.jsp</result>
			<result name="input" type="redirect">/departmentEdit.jsp</result>
		</action>
		
		<!-- 删除部门 2015-6-11杨铭 -->
		<action name="DepartmentDelete" class="DepartmentAction" method="DepartmentDelete">
			<result name="success" type="redirect">/departmentCheck.jsp</result>
		</action>

	</package>
	
	<!-- 杨明杰  假期Action -->
	<package name="holiday" extends="struts-default" namespace="/">
		<!-- 创建假日 -->
		<action name="CreateHoliday" class="HolidayAction" method="createHoliday">
			<result name="success" type="redirect">/holiday.jsp</result>
		</action>
		<!-- 获取今年的假日 -->
		<action name="SearchHoliday" class="HolidayAction" method="searchHoliday">
			<result name="success" type="redirect">/holiday.jsp</result>
		</action>
	</package>
	<!-- 杨明杰  假期Action -->
	
	<!-- 徐新院                  功能：员工信息添加 -->
	<package name="worker" extends="struts-default" namespace="/">
	<!-- 在workerAdd.jsp页面点击添加按钮进行信息的添加 -->
		<action name="Add" class="WorkerAddInformationAction" method="addInformation">
			<result name="success" type="redirect">/workerAdd.jsp</result>
			<result name="error" type="redirect">/workerAdd.jsp</result>
		</action>
		
		<!-- 根据数据库中员工的数量自动生成员工编号,并且显示添加员工信息页面workerAdd.jsp  -->
          <action name="WorkerAdd" class="WorkerAddInformationAction" method="InitWorkerAdd">
			<result name="success" type="redirect">/workerAdd.jsp</result>
		</action>
		
		<!-- 登录成功之后获取登录账号初始化员工界面信息 -->
		<action name="Select" class="WorkerAddInformationAction" method="InitnInformation">
			<result name="success" type="redirect">/workerCheck.jsp</result>
		</action>
		
		<!-- 在workerManager.jsp页面点击管理按钮之后显示对应员工的信息修改删除页面-->
		<action name="ShowUpdateWorkerformation" class="WorkerAddInformationAction" method="ShowWorkerformation">
			<result name="success" type="redirect">/workerCheck.jsp</result>
		</action>
		
		
		<!-- 修改员工信息 -->
		<action name="UpdateWorkerformation" class="WorkerAddInformationAction" method="UpdateInformation">
			<result name="success" type="redirect">/workerCheck.jsp</result>
		</action>
		
		
    	<!-- 登录成功之后显示登录人员的个人信息 -->
	  <action name="SelectManager" class="WorkerAddInformationAction" method="InitnInformation">
			<result name="success" type="redirect">/workerShow.jsp</result>
		</action>
		
		<!-- 查询数据库中所有的员工信息，可以进行分页显示workerManager.jsp  -->
			<action name="SelectAllWorkersManager" class="WorkerAddInformationAction" method="SelectAllWorkers">
			<result name="success" type="redirect">/workerManager.jsp</result>
		</action>
		<!-- 在workerManager.jsp页面进行精确查询 -->
		<action name="ResearchWorker" class="WorkerAddInformationAction" method="ResearchWorker">
			<result name="success" type="redirect">/workerManager.jsp</result>
		</action>
		
		<!--选择要删除的人员的信息进行删除 -->
		<action name="DeleteWorker" class="WorkerAddInformationAction" method="DeleteWorkerInformation">
			<result name="success" type="redirect">/workerManager.jsp</result>
			<result name="fail" type="redirect">/workerManager.jsp</result>
		</action>
		
		<!-- 修改密码 -->
		<action name="UpdatePassword" class="WorkerAddInformationAction" method="updatePassword">
			<result name="success" type="redirect">/workerChangePassword.jsp</result>
		</action>
	</package>
	
	<!-- 杨明杰  工资Action -->
	<package name="saraly" extends="struts-default" namespace="/">
		<!-- 个人工资查询 -->
		<action name="CheckSalary" class="SalaryAction" method="checkSalary">
			<result name="success" type="redirect">/salaryCheck.jsp</result>
		</action>
		<!-- 个人工资表日期 -->
		<action name="SearchSalaryDate" class="SalaryAction" method="searchSalaryDate">
			<result name="success" type="redirect">/salaryCheck.jsp</result>
		</action>
		<!-- 工资维护初始化 -->
		<action name="IntiAllSalary" class="SalaryAction" method="intiAllSalary">
			<result name="success" type="redirect">/salaryManager.jsp</result>
		</action>
		<!-- 工资维护查询 -->
		<action name="CheckDepartmentSalary" class="SalaryAction" method="checkDepartmentSalary">
			<result name="success" type="redirect">/salaryManager.jsp</result>
		</action>
		<!-- 工资维护修改 -->
		<action name="AlterSalary" class="SalaryAction" method="alterSalary">
			<result name="success" type="redirect">/salaryManager.jsp</result>
		</action>
		<!-- 工资维护结算 -->
		<action name="SaveSalary" class="SalaryAction" method="saveSalary">
			<result name="success" type="redirect">/salaryManager.jsp</result>
		</action>
	</package>
	<!-- 杨明杰  工资Action -->
	
	<!-- 杨明杰  奖惩Action -->
	<package name="ROP" extends="struts-default" namespace="/">
		<!-- 创建奖惩 -->
		<action name="CreateROP" class="ROPAction" method="createROP">
			<result name="success" type="redirect">/salaryManager.jsp</result>
		</action>
		<!-- 删除奖惩 -->
		<action name="DeleteROP" class="ROPAction" method="deleteROP">
			<result name="success" type="redirect">/salaryManager.jsp</result>
		</action>
	</package>
	<!-- 杨明杰  奖惩Action -->
</struts>    
