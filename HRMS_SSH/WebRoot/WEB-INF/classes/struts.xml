<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<!-- attendance包  2015-6-10 杨明杰、卢国燊-->
	<package name="attendance" extends="struts-default" namespace="/">
		<!-- 员工考勤查询 -->
		<action name="WorkerAttendanceSearch" class="AttendanceAction" method="workerAttendanceSearch">
			<result name="success" type="redirect">/attendanceCheck.jsp</result>
		</action>
		<!-- 员工按日期考勤查询 -->
		<action name="WorkerAttendanceSearchByDate" class="AttendanceAction" method="workerAttendanceSearchByDate">
			<result name="success" type="redirect">/attendanceCheck.jsp</result>
		</action>
		<!-- 员工请假申请 -->
		<action name="WorkerVacationApply" class="VacationAction" method="workerVacationApply">
			<result name="success" type="redirect">/attendanceVct.jsp</result>
		</action>
		<!-- 员工个人请假查询 -->
		<action name="WorkerVacationSearch" class="VacationAction" method="workerVacationSearch">
			<result name="success" type="redirect">/attendanceVct.jsp</result>
		</action>
		<!-- 请假审批查询 -->
		<action name="ApproveVacationSearch" class="VacationAction" method="approveVacationSearch">
			<result name="success" type="redirect">/attendanceVctCheck.jsp</result>
		</action>
		<!-- 请假审批 -->
		<action name="VacationApprove" class="VacationAction" method="vacationApprove">
			<result name="success" type="redirect">/attendanceVctCheck.jsp</result>
		</action>
		<!-- 签到系统 -->
		<action name="workerAttendanceInsert" class="AttendanceAction" method="workerAttendanceInsert">
			<result name="success" type="redirect">/attendanceSubmit.jsp</result>
			<result name="error" type="redirect">/attendanceSubmit.jsp</result>
		</action>
	</package>

	<!-- Login Package -->
	<package name="login" extends="struts-default" namespace="/">
		<!-- LoginAction -->
		<action name="Login" class="LoginAction" method="login">
			<result name="success" type="redirect">/index.jsp</result>
			<result name="error" type="redirect">/login.jsp</result>
			<result name="none" type="redirect">/login.jsp</result>
		</action>
		
		<!-- LogoutAction -->
		<action name="Logout" class="LoginAction" method="logout">
			<result name="success" type="redirect">/login.jsp</result>
		</action>
	</package>
	
	<!-- 杨铭    department包 -->
	<package name="department" extends="struts-default" namespace="/">
		<!-- 部门信息查询 -->
		<action name="DepartmentSearch" class="DepartmentAction" method="DepartmentSearch">
			<result name="success" type="redirect">/departmentCheck.jsp</result>
		</action>
		
		<!-- 部门信息查询(根据Oid查询) -->
		<action name="UpdateDepartmentImfo" class="DepartmentAction" method="UpdateDepartmentImfo">
			<result name="success" type="redirect">/departmentEdit.jsp</result>
		</action>
		
		<!-- 添加部门 2015-6-10 杨铭 -->
		<action name="DepartmentInsert" class="DepartmentAction" method="DepartmentInsert">
			<result name="success" type="redirect">/departmentCheck.jsp</result>
			<result name="input" type="redirect">/departmentAdd.jsp</result>
		</action>
	</package>
	
</struts>    
