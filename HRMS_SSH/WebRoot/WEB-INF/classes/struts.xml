<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<!-- attendance包 -->
	<package name="attendance" extends="struts-default" namespace="/">
		<!-- 员工考勤查询 -->
		<action name="WorkerAttendanceSearch" class="AttendanceAct" method="workerAttendanceSearch">
			<result name="success" type="redirect">/attendanceCheck.jsp</result>
		</action>
	</package>

	
	<!-- Login Package -->
	<package name="login" extends="struts-default" namespace="/">
		<!-- LoginAction -->
		<action name="Login" class="LoginAction" method="login">
			<result name="success" type="redirect">/index.jsp</result>
			<result name="error" type="redirect">/login.jsp</result>
			<result name="none" type="redirect">/login.jsp</result>
		</action>
		
		<!-- LogoutAction -->
		<action name="Logout" class="LoginAction" method="logout">
			<result name="success" type="redirect">/login.jsp</result>
		</action>
	</package>
</struts>    
