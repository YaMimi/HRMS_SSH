<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.3//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.3.dtd"> 
<validators>
    <field name="workerNo">
       <field-validator type="requiredstring">
          <message>员工编号不能为空</message>
       </field-validator>
    </field>
    <field name="workerName">
       <field-validator type="requiredstring">
          <message>员工姓名不能为空</message>
       </field-validator>
    </field>
    <field name="workerEntryDate">
       <field-validator type="date">
       <param name="min">1985-01-01</param>
       <param name="max">2015-01-01</param>
          <message>入职日期必须在1985-01-01~2015-01-01之间</message>
       </field-validator>
    </field>
    <field name="workerBirthDate">
       <field-validator type="date">
       <param name="min">1985-01-01</param>
       <param name="max">1993-01-01</param>
          <message>出身日期必须在1985-01-01~1993-01-01之间</message>
       </field-validator>
    </field>
    <field name="workerPhone">
     <field-validator type="requiredstring">
            <message>手机号不能为空!</message>
        </field-validator>
       <field-validator type="regex">
        <param name="expression"><![CDATA[^1[358]\d{9}$]]></param>
          <message>手机号格式不正确!</message>
       </field-validator>
    </field>
    <field name="workerId">
     <field-validator type="requiredstring">
            <message>员工身份证号不能为空!</message>
        </field-validator>
       <field-validator type="regex">
        <param name="expression"><![CDATA[^[1-9]\d{5}[1-9]\d{3}((0\d)|(1[0-2]))(([0|1|2]\d)|3[0-1])\d{4}$]]></param>
          <message>员工身份证号格式不正确!</message>
       </field-validator>
    </field>
</validators>